<resources>

	<style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

		<!-- styling general -->
		<item name="colorPrimary">@color/primary_500</item>
		<item name="colorPrimaryDark">@color/primary_700</item>
		<item name="colorAccent">@color/accent_200</item>

		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowNoTitle">true</item>

		<item name="android:background">@null</item>
		<item name="android:windowBackground">@null</item>

		<!-- styling dialog -->
		<item name="alertDialogTheme">@style/Theme.Dialog</item>

		<!-- styling seekBar -->
		<item name="android:seekBarStyle">@style/SeekBarAppTheme</item>

		<!-- styling actionbar -->
		<item name="android:dropDownListViewStyle">@style/ActionBar.OverflowMenu</item>
		<item name="dropDownListViewStyle">@style/ActionBar.OverflowMenu</item>
	</style>

	<!-- actionbar text color -->
	<style name="Actionbar.Color" parent="Theme.AppTheme">
		<item name="android:textColorPrimary">@color/text_header</item>
		<item name="android:textColorSecondary">@color/text_header</item>
	</style>

	<!-- overFlow menu style -->
	<style name="ActionBar.OverflowMenu" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
		<item name="android:textColorPrimary">@color/text_body_primary</item>
		<item name="android:textColorSecondary">@color/text_body_primary</item>
		<item name="android:background">@color/background</item>
	</style>

	<!-- Dialog -->
	<style name="Theme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/accent_200</item>
	</style>

	<!-- often used -->
	<style name="Theme.ImageButton.Flat.Toolbar" parent="Theme.AppTheme">
		<item name="android:layout_marginLeft">1dp</item>
		<item name="android:layout_marginRight">1dp</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
		<item name="android:scaleType">centerInside</item>
	</style>

	<style name="Theme.ImageButton.SoundControl" parent="Theme.AppTheme">
		<item name="android:padding">@dimen/padding_button</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
	</style>

	<style name="Theme.Button.Flat" parent="Theme.AppTheme">
		<item name="android:padding">@dimen/margin_small</item>
		<item name="colorControlHighlight">@color/accent_200</item>
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:textAllCaps">true</item>
		<item name="typeface">roboto_medium</item>
	</style>

	<style name="Theme.TextView.Body" parent="Theme.AppTheme">
		<item name="typeface">roboto_medium</item>
		<item name="android:textSize">@dimen/text_body</item>
		<item name="android:textColor">@color/text_body_secondary</item>
	</style>

</resources>
