<resources>

	<style name="Theme" parent="Theme.AppCompat.Light" />


	<style name="Theme.AppTheme" parent="Theme">

		<item name="colorPrimary">@color/primary_500</item>
		<item name="colorPrimaryDark">@color/primary_700</item>
		<item name="colorAccent">@color/accent_200</item>

		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowNoTitle">true</item>

		<item name="android:seekBarStyle">@style/SeekBarAppTheme</item>

		<item name="actionModeBackground">@drawable/cab_background_top</item>
		<item name="actionModeSplitBackground">@drawable/cab_background_bottom_actionbar</item>

		<item name="android:actionModeCloseDrawable">@drawable/ic_action_done</item>
		<item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Actionbar</item>

	</style>

	<style name="ActionBarThemeOverlay" parent="">
		<item name="android:textColorPrimary">@color/text_header</item>
		<item name="colorControlNormal">@color/text_header</item>
		<item name="colorControlHighlight">@color/text_header</item>
	</style>

	<style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
