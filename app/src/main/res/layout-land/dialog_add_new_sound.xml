<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_title"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textStyle="bold"
			android:textColor="@color/text_content_primary"
			android:textSize="@dimen/text_headline"
			android:text="@string/dialog_add_new_sound_title"/>

		<!-- this invisible input is necessary for dynamically added input fields to get focus -->
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="none"
			android:visibility="gone"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:id="@+id/layout_controls"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginRight="@dimen/margin_default"
						android:layout_marginEnd="@dimen/margin_default">

					<ImageButton
							android:id="@+id/b_add_another_sound"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_alignParentRight="true"
							android:layout_gravity="center_vertical|end"
							android:background="@android:color/transparent"
							android:contentDescription="@string/dialog_add_new_sound_content_description"
							android:src="@drawable/selector_ic_add_sound_dialog"/>

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_alignParentLeft="true"
							android:layout_toLeftOf="@id/b_add_another_sound"
							android:layout_toStartOf="@id/b_add_another_sound"
							android:layout_gravity="center_vertical"
							android:paddingLeft="@dimen/margin_default"
							android:paddingRight="@dimen/margin_default"
							android:textColor="@color/text_content_secondary"
							android:textSize="@dimen/text_body"
							android:text="@string/dialog_add_new_sound_message"/>

				</RelativeLayout>

				<include layout="@layout/dialog_button_bar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical|end"/>

			</LinearLayout>
			<LinearLayout
				android:id="@+id/layout_sounds_to_add"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toStartOf="@id/layout_controls"
				android:layout_toLeftOf="@id/layout_controls"
				android:paddingBottom="@dimen/margin_large"
				android:orientation="vertical"/>

		</RelativeLayout>
	</LinearLayout>

</ScrollView>