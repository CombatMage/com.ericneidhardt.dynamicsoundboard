<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true"
		android:background="@color/background">

	<android.support.design.widget.AppBarLayout
			android:id="@+id/abl_navigation_drawer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<android.support.design.widget.CollapsingToolbarLayout
				android:id="@+id/collapsing_toolbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_scrollFlags="scroll|exitUntilCollapsed"
				app:contentScrim="@color/primary_700">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				<org.neidhardt.dynamicsoundboard.navigationdrawer.header.NavigationDrawerHeaderView
						android:layout_width="match_parent"
						android:layout_height="@dimen/height_navigation_drawer_header"/>

				<android.support.design.widget.TabLayout
						android:id="@+id/tl_tab_bar"
						android:layout_width="match_parent"
						android:layout_height="@dimen/height_list_item"
						android:background="@color/primary_200"/>
			</LinearLayout>

		</android.support.design.widget.CollapsingToolbarLayout>

		<include layout="@layout/toolbar_navigation_drawer"
				android:visibility="gone"
				tools:visibility="visible"/>

	</android.support.design.widget.AppBarLayout>

	<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_navigation_drawer_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/margin_small"
			android:overScrollMode="never"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			tools:listitem="@layout/view_sound_sheet_item"/>

	<View
			android:id="@+id/v_reveal_shadow"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/shadow_dark"
			android:visibility="gone"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="bottom">

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:background="@drawable/shape_shadow_horizontal"
				android:rotation="180"/>

		<include
				layout="@layout/view_navigation_drawer_button_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"/>

	</LinearLayout>


</android.support.design.widget.CoordinatorLayout>