<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textStyle="bold"
			android:textColor="@color/text_content_primary"
			android:textSize="@dimen/text_headline"
			android:text="@string/dialog_sound_layout_settings_title"/>

	<org.neidhardt.dynamicsoundboard.customview.edittext.NoUnderscoreEditText
			android:id="@+id/et_name_sound_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_default"/>

	<include layout="@layout/dialog_button_bar_save"/>

</LinearLayout>