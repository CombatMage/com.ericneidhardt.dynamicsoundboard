<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.view.ViewPager
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_list_item_xlarge">

	<FrameLayout
			android:id="@+id/layout_remove_sound_item_left"
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_list_item_xlarge"
			android:background="@color/background_secondary">

		<TextView
				android:id="@+id/tv_delete_sound_left"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/margin_default"
				android:gravity="end|center_vertical"
				android:text="@string/sound_control_delete"
				android:textSize="@dimen/text_subheading"
				android:textColor="@color/text_accent"
				android:textStyle="bold"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:background="@drawable/shape_shadow_horizontal"/>

		<View
				android:id="@+id/v_shadow_bottom_left"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:layout_gravity="bottom"
				android:rotation="180"
				android:background="@drawable/shape_shadow_horizontal"/>

		<View
				android:layout_width="@dimen/height_shadow_fixed"
				android:layout_height="@dimen/height_list_item_xlarge"
				android:layout_gravity="end"
				android:rotation="180"
				android:background="@drawable/shape_shadow_vertical"/>

		<View
				android:layout_width="@dimen/height_shadow_fixed"
				android:layout_height="@dimen/height_list_item_xlarge"
				android:layout_gravity="start"
				android:background="@drawable/shape_shadow_vertical"/>

	</FrameLayout>

	<LinearLayout
			android:id="@+id/layout_sound_controls"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<include
				layout="@layout/view_sound_control"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_list_item_xlarge"/>

		<View
				android:id="@+id/v_shadow_bottom"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:visibility="gone"
				android:background="@drawable/shape_shadow_horizontal"/>

	</LinearLayout>

	<FrameLayout
			android:id="@+id/layout_remove_sound_item_right"
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_list_item_xlarge"
			android:background="@color/background_secondary">

		<TextView
				android:id="@+id/tv_delete_sound_right"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/margin_default"
				android:gravity="start|center_vertical"
				android:text="@string/sound_control_delete"
				android:textSize="@dimen/text_subheading"
				android:textColor="@color/text_accent"
				android:textStyle="bold"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:background="@drawable/shape_shadow_horizontal"/>

		<View
				android:id="@+id/v_shadow_bottom_right"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_fixed"
				android:layout_gravity="bottom"
				android:rotation="180"
				android:background="@drawable/shape_shadow_horizontal"/>

		<View
				android:layout_width="@dimen/height_shadow_fixed"
				android:layout_height="@dimen/height_list_item_xlarge"
				android:layout_gravity="end"
				android:rotation="180"
				android:background="@drawable/shape_shadow_vertical"/>

		<View
				android:layout_width="@dimen/height_shadow_fixed"
				android:layout_height="@dimen/height_list_item_xlarge"
				android:layout_gravity="start"
				android:background="@drawable/shape_shadow_vertical"/>

	</FrameLayout>

</android.support.v4.view.ViewPager>