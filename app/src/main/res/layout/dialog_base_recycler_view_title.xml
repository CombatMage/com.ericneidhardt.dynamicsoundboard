<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:minWidth="@dimen/width_min_dialog"
			  tools:background="@color/background_secondary">

	<LinearLayout
			android:id="@+id/layout_dialog_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/margin_default"
			android:paddingLeft="@dimen/padding_dialog"
			android:paddingStart="@dimen/padding_dialog"
			android:paddingRight="@dimen/padding_dialog"
			android:paddingEnd="@dimen/padding_dialog"
			android:paddingBottom="@dimen/padding_dialog"
			android:orientation="vertical"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<org.neidhardt.dynamicsoundboard.views.DialogButtonBar
				android:id="@+id/layout_button_bar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				app:text_cancle_button="@string/dialog_cancel"
				app:text_ok_button="@string/dialog_ok"
				tools:background="@color/background"/>

		<android.support.v7.widget.RecyclerView
				android:id="@+id/rv_dialog"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_above="@id/layout_button_bar"
				android:overScrollMode="never"/>

		<View
				android:id="@+id/v_divider_top"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:background="@drawable/shape_shadow_horizontal"/>

		<View
				android:id="@+id/v_divider_bottom"
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:layout_above="@id/layout_button_bar"
				android:rotation="180"
				android:background="@drawable/shape_shadow_horizontal"/>

	</RelativeLayout>
</LinearLayout>