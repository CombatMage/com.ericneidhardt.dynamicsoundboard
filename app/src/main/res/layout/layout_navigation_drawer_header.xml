<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<variable
				name="viewModel"
				type="org.neidhardt.dynamicsoundboard.navigationdrawerfragment.viewhelper.viewmodel.NavigationDrawerHeaderVM"/>
	</data>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_navigation_drawer_header"
			tools:layout_width="match_parent">

		<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:scaleType="fitXY"
				android:contentDescription="@string/app_name"
				android:src="@drawable/ic_background_navigation_drawer"/>

		<RelativeLayout
				android:id="@+id/rl_view_navigation_drawer_header_change_sound_layout"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:orientation="vertical"
				android:layout_alignParentBottom="true"
				android:layout_alignParentStart="true"
				android:background="@drawable/selector_background_list_item"
				android:onClick="@{(view) -> viewModel.onChangeLayoutClicked()}">

			<ImageView
					android:id="@+id/iv_view_navigation_drawer_header_change_sound_layout_indicator"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="@dimen/margin_default"
					android:contentDescription="@string/navigation_drawer_content_description_select_sound_layout"
					android:scaleType="centerInside"
					android:src="@drawable/ic_drop_down"
					app:animateVisibleRotateX="@{viewModel.isSoundLayoutOpen}"/>

			<TextView
					android:id="@+id/tv_view_navigation_drawer_header_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_default"
					android:layout_marginTop="@dimen/margin_tiny"
					android:text="@string/app_name"
					android:textColor="@color/text_header"
					android:textSize="@dimen/text_body"
					android:fontFamily="sans-serif-medium"/>

			<TextView
					android:id="@+id/tv_view_navigation_drawer_header_current_sound_layout_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_default"
					android:layout_marginTop="@dimen/margin_tiny"
					android:layout_below="@id/tv_view_navigation_drawer_header_title"
					android:layout_toStartOf="@id/iv_view_navigation_drawer_header_change_sound_layout_indicator"
					android:layout_alignParentStart="true"
					android:textSize="@dimen/text_body"
					android:text="@{viewModel.title != null ? viewModel.title : @string/suggested_sound_layout_name}"
					android:textColor="@color/text_header"
					android:fontFamily="sans-serif"
					tools:text="@string/suggested_sound_layout_name"/>
		</RelativeLayout>

		<View
				android:id="@+id/v_view_navigation_drawer_header_status_bar_padding"
				android:layout_width="match_parent"
				android:layout_height="@dimen/status_bar_padding"/>

		<ImageView
				android:id="@+id/iv_view_navigation_drawer_header_avatar"
				android:layout_width="@dimen/size_avatar_navigation_drawer"
				android:layout_height="@dimen/size_avatar_navigation_drawer"
				android:layout_marginStart="@dimen/margin_default"
				android:layout_marginTop="@dimen/margin_default"
				android:layout_below="@id/v_view_navigation_drawer_header_status_bar_padding"
				android:contentDescription="@string/navigation_drawer_content_description_avatar"
				android:src="@drawable/ic_launcher"/>

	</RelativeLayout>
</layout>