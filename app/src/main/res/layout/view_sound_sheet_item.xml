<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.view.ViewPager
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_list_item">

	<TextView
			android:id="@+id/layout_remove_left"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="@dimen/margin_default"
			android:gravity="right|center_vertical"
			android:text="@string/sound_control_delete"
			android:textSize="@dimen/text_subheading"
			android:textColor="@color/text_accent"
			android:textStyle="bold"
			android:background="@color/primary_100"/>

	<RelativeLayout
			android:id="@+id/layout_sound_sheet"
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_list_item"
			android:background="@drawable/selector_background">

		<ImageView
			android:id="@+id/iv_selected"
			android:layout_width="@dimen/height_list_item"
			android:layout_height="@dimen/height_list_item"
			android:layout_alignParentLeft="true"
			android:rotation="270"
			android:scaleType="centerCrop"
			android:contentDescription="@string/tab_sound_sheets_content_description_selected"
			android:src="@drawable/shape_selected_indicator"/>

		<TextView
			android:id="@+id/tv_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_list_item_left"
			android:layout_marginTop="@dimen/margin_default"
			android:layout_marginBottom="@dimen/margin_default"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:textSize="@dimen/text_subheading"
			android:textColor="@color/text_content_primary"
			android:text="@string/app_name"/>

		<ImageButton
			android:id="@+id/ib_delete_sound_sheet"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_margin="@dimen/margin_small"
			android:contentDescription="@string/tab_sound_sheets_content_description_delete"
			android:src="@drawable/selector_ic_delete_sound_sheet"
			android:background="@android:color/transparent"/>

	</RelativeLayout>

</android.support.v4.view.ViewPager>