<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:orientation="vertical"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:minWidth="@dimen/width_min_dialog"
			  tools:background="@color/background_secondary">

	<LinearLayout
			android:id="@+id/layout_dialog_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/padding_dialog"
			android:orientation="vertical">

	</LinearLayout>
	<org.neidhardt.dynamicsoundboard.views.DialogButtonBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"/>

</LinearLayout>