<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.ericneidhardt.dynamicsoundboard.customview.CircularImageView
			android:layout_width="@dimen/size_floating_button"
			android:layout_height="@dimen/size_floating_button"
			android:layout_margin="@dimen/margin_default"
			android:layout_gravity="end|bottom"
			android:src="@drawable/selector_ic_add_sound_dialog"
			app:border="true"
			app:border_color="@color/accent_200"
			app:shadow="true"/>

	</FrameLayout>

</LinearLayout>