<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_title"
		android:gravity="center_vertical"
		android:paddingLeft="@dimen/margin_default"
		android:paddingRight="@dimen/margin_default"
		android:textStyle="bold"
		android:textColor="@color/text_content_primary"
		android:textSize="@dimen/text_headline"
		android:text="@string/dialog_add_new_layout_title"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin_default"
		android:paddingRight="@dimen/margin_default"
		android:textColor="@color/text_content_secondary"
		android:textSize="@dimen/text_body"
		android:text="@string/dialog_add_new_layout_message"/>

	<com.ericneidhardt.dynamicsoundboard.customview.CustomEditText
		android:id="@+id/et_name_new_sound_sheet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/margin_default"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:paddingLeft="@dimen/margin_default"
		android:paddingRight="@dimen/margin_default"
		android:paddingBottom="@dimen/margin_default"
		android:orientation="horizontal">

		<Button
			android:id="@+id/b_cancel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_small"
			android:text="@string/dialog_cancel"
			android:textSize="@dimen/text_subheading"
			android:textColor="@color/text_content_primary"
			android:background="@drawable/selector_background_accent"/>

		<Button
			android:id="@+id/b_ok"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_small"
			android:text="@string/dialog_ok"
			android:textSize="@dimen/text_subheading"
			android:textColor="@color/text_accent"
			android:background="@drawable/selector_background_accent"/>

	</LinearLayout>

</LinearLayout>