<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<RelativeLayout
			android:id="@+id/layout_contextual_controls"
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_list_item"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal"
			android:background="@color/background">

		<LinearLayout
				android:id="@+id/layout_controls"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:orientation="horizontal"
				android:background="@color/background">

			<com.devspark.robototextview.widget.RobotoTextView
					android:id="@+id/b_delete"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_default"
					android:gravity="center"
					android:text="@string/navigation_drawer_delete"
					android:textSize="@dimen/text_sub_text"
					android:textColor="@color/text_content_primary"
					app:typeface="roboto_medium"
					android:clickable="true"
					android:background="@drawable/selector_background_list_item"/>

			<com.devspark.robototextview.widget.RobotoTextView
					android:id="@+id/b_ok"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_default"
					android:gravity="center"
					android:text="@string/navigation_drawer_add"
					android:textSize="@dimen/text_sub_text"
					android:textColor="@color/text_content_primary"
					app:typeface="roboto_medium"
					android:clickable="true"
					android:background="@drawable/selector_background_list_item"/>
		</LinearLayout>

		<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:background="@color/background">

			<com.devspark.robototextview.widget.RobotoTextView
					android:id="@+id/b_delete_selected"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="@dimen/margin_default"
					android:gravity="center"
					android:text="@string/navigation_drawer_delete_selected"
					android:textSize="@dimen/text_sub_text"
					android:textColor="@color/text_content_primary"
					app:typeface="roboto_medium"
					android:background="@drawable/selector_background_list_item"
					android:clickable="true"
					android:visibility="gone"/>
		</FrameLayout>
	</RelativeLayout>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_above="@id/layout_contextual_controls"
			android:fillViewport="true">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<include layout="@layout/navigation_drawer_header"/>

			<FrameLayout
					android:id="@+id/layout_navigation_drawer_list_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/background">

				<include layout="@layout/navigation_drawer_view_pager"/>

				<org.neidhardt.dynamicsoundboard.soundlayouts.SoundLayoutsList
						android:id="@+id/layout_select_sound_layout"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:visibility="invisible"/>

				<View
						android:id="@+id/v_reveal_shadow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@color/shadow_dark"
						android:visibility="gone"/>

			</FrameLayout>

		</LinearLayout>

	</ScrollView>

	<View
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_shadow"
			android:layout_above="@id/layout_contextual_controls"
			android:rotation="180"
			android:background="@drawable/shape_shadow_horizontal"/>

</RelativeLayout>

