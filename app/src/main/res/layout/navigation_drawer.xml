<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="@dimen/navigation_width"
			 android:layout_height="match_parent"
			 android:layout_gravity="start">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<com.ericneidhardt.dynamicsoundboard.customview.SlidingTabLayout
					android:id="@+id/layout_tab"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/primary_100"/>
			
			<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/background">

				<android.support.v4.view.ViewPager
						android:id="@+id/vp_tab_content"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

					<include android:id="@+id/rv_sound_sheets"
							 layout="@layout/view_sound_sheets"
							 android:layout_width="match_parent"
							 android:layout_height="wrap_content"/>
					
					<com.ericneidhardt.dynamicsoundboard.playlist.Playlist
							android:id="@+id/playlist"
							android:layout_width="match_parent"
							android:layout_height="match_parent"/>

				</android.support.v4.view.ViewPager>

				<View
						android:layout_width="match_parent"
						android:layout_height="@dimen/height_shadow_horizontal"
						android:background="@drawable/ic_shadow_horizontal"/>
			</FrameLayout>

		</LinearLayout>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow_horizontal"
				android:background="@drawable/ic_shadow_horizontal"/>
</FrameLayout>