<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_list_item"
		android:background="@drawable/selector_background_list_item">

	<ImageView
			android:id="@+id/iv_selected"
			android:layout_width="@dimen/height_list_item"
			android:layout_height="@dimen/height_list_item"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:rotation="90"
			android:scaleType="centerCrop"
			android:contentDescription="@string/dialog_add_new_sound_from_directory_content_description_selection"
			android:src="@drawable/shape_selected_indicator"/>

	<ImageView
			android:id="@+id/iv_file_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_small"
			android:layout_marginStart="@dimen/margin_small"
			android:layout_centerVertical="true"
			android:padding="@dimen/margin_small"
			android:scaleType="centerInside"
			android:contentDescription="@string/dialog_add_new_sound_from_directory_content_description_file_type"
			tools:src="@drawable/ic_folder"/>

	<com.devspark.robototextview.widget.RobotoTextView
			android:id="@+id/tv_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margin_list_item_left_large"
			android:layout_marginStart="@dimen/margin_list_item_left_large"
			android:layout_marginRight="@dimen/margin_list_item_left"
			android:layout_marginEnd="@dimen/margin_list_item_left"
			android:layout_marginTop="@dimen/margin_default"
			android:layout_marginBottom="@dimen/margin_default"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textSize="@dimen/text_subheading"
			android:textColor="@color/selector_text_content_primary"
			android:text="@string/app_name"
			app:typeface="roboto_medium"/>

</RelativeLayout>