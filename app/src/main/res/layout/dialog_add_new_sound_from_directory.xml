<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_title"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textStyle="bold"
			android:textColor="@color/text_content_primary"
			android:textSize="@dimen/text_headline"
			android:text="@string/dialog_add_new_sound_from_directory_title"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textColor="@color/text_content_secondary"
			android:textSize="@dimen/text_body"
			android:text="@string/dialog_add_new_sound_from_directory_message"/>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:background="@drawable/ic_shadow_horizontal"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:layout_gravity="bottom"
				android:rotation="180"
				android:background="@drawable/ic_shadow_horizontal"/>

	</FrameLayout>

	<include layout="@layout/dialog_button_bar"/>

</LinearLayout>