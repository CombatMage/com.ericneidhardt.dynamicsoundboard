<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:animateLayoutChanges="true">

	<android.support.design.widget.TabLayout
			android:id="@+id/tl_tab_bar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_list_item"
			android:background="@color/primary_200"/>

	<android.support.v4.view.ViewPager
			android:id="@+id/vp_tab_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"> <!-- the required height is set programmatic by NavigationDrawerFragment -->

		<org.neidhardt.dynamicsoundboard.navigationdrawer.soundsheets.SoundSheets
				android:id="@+id/sound_sheets"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

		<org.neidhardt.dynamicsoundboard.navigationdrawer.playlist.Playlist
				android:id="@+id/playlist"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</android.support.v4.view.ViewPager>

</LinearLayout>