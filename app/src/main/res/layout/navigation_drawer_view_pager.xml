<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:animateLayoutChanges="true">

	<org.neidhardt.dynamicsoundboard.navigationdrawer.SlidingTabLayout
			android:id="@+id/layout_tab"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/primary_200"/>

	<android.support.v4.view.ViewPager
			android:id="@+id/vp_tab_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"> <!-- the required height is set programmatic by NavigationDrawerFragment -->

		<org.neidhardt.dynamicsoundboard.navigationdrawer.soundsheets.views.SoundSheets
				android:id="@+id/sound_sheets"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

		<org.neidhardt.dynamicsoundboard.navigationdrawer.playlist.views.Playlist
				android:id="@+id/playlist"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</android.support.v4.view.ViewPager>

</LinearLayout>