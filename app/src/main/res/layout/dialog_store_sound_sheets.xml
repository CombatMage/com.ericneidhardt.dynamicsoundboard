<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:animateLayoutChanges="true">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="@dimen/height_title"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textStyle="bold"
			android:textColor="@color/text_content_primary"
			android:textSize="@dimen/text_headline"
			android:text="@string/dialog_add_new_sound_from_directory_title"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_default"
			android:paddingRight="@dimen/margin_default"
			android:textColor="@color/text_content_secondary"
			android:textSize="@dimen/text_body"
			android:text="@string/dialog_store_layout_message"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/margin_default"
			android:layout_marginEnd="@dimen/margin_default"
			android:layout_marginBottom="@dimen/margin_very_small">

		<Button
				android:id="@+id/b_add"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:padding="@dimen/margin_very_small"
				android:text="@string/dialog_add"
				android:textSize="@dimen/text_subheading"
				android:textColor="@color/text_content_primary"
				android:background="@drawable/selector_background_accent"/>

		<org.neidhardt.dynamicsoundboard.customview.DialogEditText
				android:id="@+id/et_name_file"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/margin_default"
				android:layout_toLeftOf="@id/b_add"
				android:layout_toStartOf="@id/b_add"/>

	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:id="@+id/layout_dialog_controls"
				android:layout_marginTop="@dimen/margin_default"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:orientation="vertical">

			<LinearLayout
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end"
					android:paddingLeft="@dimen/margin_default"
					android:paddingRight="@dimen/margin_default"
					android:layout_marginBottom="@dimen/margin_default"
					android:orientation="horizontal">

				<Button
						android:id="@+id/b_cancel"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="@dimen/margin_very_small"
						android:text="@string/dialog_cancel"
						android:textSize="@dimen/text_subheading"
						android:textColor="@color/text_content_primary"
						android:background="@drawable/selector_background_accent"/>

				<Button
						android:id="@+id/b_save"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="@dimen/margin_very_small"
						android:text="@string/dialog_save"
						android:textSize="@dimen/text_subheading"
						android:textColor="@color/text_accent"
						android:background="@drawable/selector_background_accent"/>

			</LinearLayout>

		</LinearLayout>

		<android.support.v7.widget.RecyclerView
				android:id="@+id/rv_directories"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_above="@id/layout_dialog_controls"
				android:overScrollMode="never"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:background="@drawable/ic_shadow_horizontal"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_shadow"
				android:layout_above="@id/layout_dialog_controls"
				android:rotation="180"
				android:background="@drawable/ic_shadow_horizontal"/>

	</RelativeLayout>
</LinearLayout>