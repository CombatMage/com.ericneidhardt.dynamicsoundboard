<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/toolbar"
		android:layout_height="@dimen/abc_action_bar_default_height_material"
		android:layout_width="match_parent"
		android:minHeight="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		app:theme="@style/Actionbar.Color"
		android:theme="@style/Actionbar.Color"
		app:popupTheme="@style/Theme.AppTheme">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<ImageButton
				android:id="@+id/action_add_sound_sheet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				style="@style/ActionBarItemMargin"
				android:scaleType="centerInside"
				android:background="@drawable/selector_background_actionbar"
				android:contentDescription="@string/action_add_new_sound_sheet"
				android:src="@drawable/ic_action_new_sound_layout"/>

		<ImageButton
				android:id="@+id/action_add_sound"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/action_add_sound_sheet"
				android:layout_toStartOf="@id/action_add_sound_sheet"
				style="@style/ActionBarItemMargin"
				android:scaleType="centerInside"
				android:background="@drawable/selector_background_actionbar"
				android:contentDescription="@string/action_add_new_sound"
				android:src="@drawable/ic_action_add_sound"/>

		<ImageButton
				android:id="@+id/action_add_sound_dir"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/action_add_sound"
				android:layout_toStartOf="@id/action_add_sound"
				style="@style/ActionBarItemMargin"
				android:scaleType="centerInside"
				android:background="@drawable/selector_background_actionbar"
				android:contentDescription="@string/action_add_new_sound_from_dir"
				android:src="@drawable/ic_action_add_sound_dir"/>

		<com.devspark.robototextview.widget.RobotoTextView
				android:id="@+id/tv_app_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/action_add_sound_dir"
				android:layout_toStartOf="@id/action_add_sound_dir"
				android:gravity="center_horizontal"
				android:text="@string/app_name"
				android:textColor="@color/text_header"
				android:textSize="@dimen/text_title"
				app:typeface="roboto_medium"/>

		<org.neidhardt.dynamicsoundboard.views.edittext.ActionbarEditText
				android:id="@+id/et_set_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@id/action_add_sound_dir"
				android:layout_toStartOf="@id/action_add_sound_dir"/>

	</RelativeLayout>
</android.support.v7.widget.Toolbar>